	$(CC) $(LDFLAGS) -o $@ c/cinit.o c/all_symbols.o mkclmin.@LIBEXT@ $(LIBRARIES) $(LIBS)


.gdbinit: util/gdbinit
	cp util/gdbinit $@

c/cinit.o: c/GNUmakefile c/cinit.d c/mkcl/mkcl.h
	cd c; $(MAKE) GNUmakefile; $(MAKE) -f GNUmakefile cinit.o

c/all_symbols.o: c/GNUmakefile c/all_symbols.d c/symbols_list.h c/symbols_list2.h c/mkcl/mkcl.h
